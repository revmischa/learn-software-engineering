{
  "builders": [
    {
      "type": "virtualbox-iso",
      "vm_name": "packer-centos-6_5-64",
      "guest_os_type": "RedHat_64",
      "boot_wait": "10s",
      "iso_url": "http://mirrors.liquidweb.com/CentOS/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
      "iso_checksum": "0d9dc37b5dd4befa1c440d2174e88a87",
      "iso_checksum_type": "md5",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "300s",
      "headless": false,
      "http_directory": "bootstrap/packer/http",
      "virtualbox_version_file": ".vbox_version",
      "shutdown_command": "sudo /sbin/halt",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"],
        ["modifyvm", "{{.Name}}", "--natdnshostresolver1", "on"]
     ],
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks-centos6-vagrant.cfg<enter><wait>"
      ],
      "output_directory": "bootstrap/packer/centos6"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "bootstrap/packer/scripts/common.sh",
      "destination": "/tmp/common.sh"
    },
    {
      "type": "shell",
      "scripts": [
        "bootstrap/packer/scripts/net.sh",
        "bootstrap/packer/scripts/repos.sh",
        "bootstrap/packer/scripts/vbox-additions.sh",
        "bootstrap/packer/scripts/setup-vagrant.sh",
        "bootstrap/packer/scripts/cleanup.sh"
      ],
       "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'"
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "output": "centos.box"
    }
  ]

}
